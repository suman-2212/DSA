class Solution:
    def checkValidString(self, s: str) -> bool:
        minopen = 0
        maxopen = 0
        for i in s:
            if i == "(":
                minopen += 1
                maxopen += 1
            elif i == ")":
                minopen -= 1
                maxopen -= 1
            else:
                minopen -= 1
                maxopen += 1
            if maxopen < 0:
                return False
            if minopen < 0:
                minopen = 0
        return minopen == 0
        
